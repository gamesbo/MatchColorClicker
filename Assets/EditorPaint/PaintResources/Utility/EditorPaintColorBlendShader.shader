Shader "Hidden/EditorPaint/ColorBlend"
{
	Properties
	{
	}
	SubShader
	{
		// No culling or depth
		Cull Off ZWrite Off ZTest Always

		Pass
		{
			CGPROGRAM
			#pragma vertex vert
			#pragma fragment frag
			
			#include "UnityCG.cginc"

			struct appdata
			{
				float4 vertex : POSITION;
				float2 uv : TEXCOORD0;
			};

			struct v2f
			{
				float2 uv : TEXCOORD0;
				float4 vertex : SV_POSITION;
			};

			v2f vert (appdata v)
			{
				v2f o;
				o.vertex = UnityObjectToClipPos(v.vertex);
				o.uv = v.uv;
				return o;
			}
			
			sampler2D AoTexture;
			float4 Color1;
			float4 Color2;

			fixed4 frag (v2f i) : SV_Target
			{
				fixed4 output = tex2D(AoTexture, i.uv);

				output = lerp(Color2, Color1, output.r);
				output.a = 1;

				return output;
			}
			ENDCG
		}
	}
}
